<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" 
         xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <context-param>
        <param-name>config-dir</param-name>
        <param-value>/tmp</param-value>
    </context-param>

    <context-param>
        <param-name>users-list-file-name</param-name>
        <param-value>users.xml</param-value>
    </context-param>

    <context-param>
        <param-name>bigfiles-xsl</param-name>
        <param-value>big-files.xsl</param-value>
    </context-param>

    <context-param>
        <param-name>bigfiles-xml</param-name>
        <param-value>big-files-source.xml</param-value>
    </context-param>
    
    
    <context-param>
        <param-name>bytypefiles-xsl</param-name>
        <param-value>by-type-files.xsl</param-value>
    </context-param>

    <context-param>
        <param-name>bytypefiles-xml</param-name>
        <param-value>by-type-files-source.xml</param-value>
    </context-param>

    <context-param>
        <param-name>duplicatefiles-xsl</param-name>
        <param-value>duplicate-files.xsl</param-value>
    </context-param>

    <context-param>
        <param-name>duplicatefiles-xml</param-name>
        <param-value>duplicate-files-source.xml</param-value>
    </context-param>

    <filter>
        <filter-name>JSONP</filter-name>
        <filter-class>rest.filters.CORSandJSONPFilter</filter-class>
        <init-param>
            <param-name>JSONPParameter</param-name>
            <param-value>callback</param-value>
        </init-param>
        <init-param>
            <param-name>exposeHeadersList</param-name>
            <param-value></param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>JSONP</filter-name>
        <url-pattern>/rest/*</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>
